    +vacancy_card('PHP developer', 'Informika.ru', 'Russia, Moscow')
    h3#operations Operations
    +vacancy_card('Linux administrator', 'HFLabs.INC', 'GB, London')
    +vacancy_card('Operations Engineer', 'Cisco Tech', 'Turkey, Istanbul')

