    +vacancy_card('Lead PHP developer', 'Awesome company', 'Russia, Moscow')
    +vacancy_card('Wordpress developer', 'PromoSite.com', 'Russia, Kazan')
    +vacancy_card('PHP developer', 'Magma', 'Russia, St-Peterburg')
